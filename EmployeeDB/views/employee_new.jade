extends layout

block content
    h1= title
    div.newemployee
        form( method="post")
            div
                div.space
                div
                    span.label Title :
                    input(type="text", name="title", id="editEmployeeTitle")
                div
                    span.label Name :
                    input(type="text", name="name", id="editEmployeeName")
                div#editEmployeeSubmit
                    input(type="submit", value="Save")
                div.space
        a(href="/")!= "Back to Employee List"
